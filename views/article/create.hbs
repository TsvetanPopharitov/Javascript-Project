<script src="./../../public/javascripts/dropzone.js"></script>
<div class="container body-content span=8 offset=2">
    <div class="well">
        <form class="form-horizontal" method="POST" action="/article/create">
            <fieldset>
                <legend>Нова обява</legend>

                <div class="form-group">
                    <label class="col-sm-4 control-label" for="articleTitle">Заглавие</label>
                    <div class="col-sm-4 ">
                        <input type="text" class="form-control" id="articleTitle" placeholder="Article Title"
                               name="title" required>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-4 control-label" for="articleContent">Съдържание</label>
                    <div class="col-sm-6">
                        <textarea class="form-control" id="articleContent" rows="5" name="content" required></textarea>
                    </div>
                </div>
                <div class="form-group"><label class="col-sm-4 control-label" for="category">Категория</label>
                    <div class="col-sm-6"><select class="form-control" id="select" name="category"> {{#each categories}}
                        <option value="{{this.id}}">{{this.name}}</option> {{/each}} </select></div>
                </div>
                <div class="form-group"><label class="col-sm-4 control-label" for="article_tags">Тагове</label>
                    <div class="col-sm-4 "><input type="text" class="form-control" id="article_tags" placeholder="Tags"
                                                  name="tagNames"></div>
                </div>
                <form action="" method="post" enctype="multipart/form-data">
                    <input type="file" name="file"/>
                </form>
                <div class="form-group">
                    <div class="col-sm-4 col-sm-offset-4">

                        <button type="reset" class="btn btn-default">Отказ</button>

                        <button type="submit" class="btn btn-primary">Изпрати</button>
                    </div>
                </div>
            </fieldset>
        </form>
    </div>
</div>
