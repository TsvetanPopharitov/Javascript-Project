<div class="container body-content span=8 offset=2">
    <div class="well">
        <form class="form-horizontal" method="POST" action="/article/delete/{{id}}">
            <fieldset>
                <legend>Изтриване на обявата</legend>

                <div class="form-group">
                    <label class="col-sm-4 control-label" for="articleTitle">Заглавие</label>
                    <div class="col-sm-4 ">
                        <input type="text" class="form-control" id="articleTitle" placeholder="Article Title"
                               value="{{title}}" name="title" disabled>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-4 control-label" for="articleContent">Съдържание</label>
                    <div class="col-sm-6">
                        <textarea class="form-control" id="articleContent" rows="5" name="content"
                                  disabled>{{content}}</textarea>
                    </div>
                </div>
                <div class="form-group"><label class="col-sm-4 control-label" for="articleContent">Категория</label>
                    <div class="col-sm-6"><select name="category" class="form-control" id="select" disabled>
                        <option value="{{category.id}}">{{category.name}}</option>
                    </select></div>
                </div>
                <div class="form-group"><label class="col-sm-4 control-label" for="article_tags">Тагове</label>
                    <div class="col-sm-4 "><input type="text" class="form-control" id="article_tags" name="tags"
                                                  value="{{ tagNames }}" disabled></div>
                </div>
                <div class="form-group">
                    <div class="col-sm-4 col-sm-offset-4">

                        <a href="/" class="btn btn-default">Отказ</a>

                        <button type="submit" class="btn btn-danger">Изтрий</button>
                    </div>
                </div>
            </fieldset>
        </form>
    </div>
</div>
